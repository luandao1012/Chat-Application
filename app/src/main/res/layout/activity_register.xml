<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#000000">
    <ImageView
        android:id="@+id/imageRegister"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtRegister"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/imageRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtCreateNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:textSize="20sp"
        android:textColor="#C4C4C4"
        app:layout_constraintTop_toBottomOf="@+id/txtRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txtUsernameRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#FEFCFC"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateNewAccount"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="18dp"/>
    <EditText
        android:id="@+id/edtUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUsernameRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="18dp"
        android:background="@drawable/input_email_background"
        android:hint="Username"
        />
    <TextView
        android:id="@+id/txtEmailRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FEFCFC"
        app:layout_constraintTop_toBottomOf="@+id/edtUsernameRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"/>
    <EditText
        android:id="@+id/edtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="18dp"
        android:background="@drawable/input_email_background"
        android:hint="Email" />
    <TextView
        android:id="@+id/txtMobileNumberRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="#FEFCFC"
        app:layout_constraintTop_toBottomOf="@+id/edtEmailRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"/>
    <EditText
        android:id="@+id/edtMobileNumberRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/txtMobileNumberRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:paddingStart="18dp"
        android:background="@drawable/input_email_background"
        android:hint="Mobile Number" />
    <TextView
        android:id="@+id/txtPasswordRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#FEFCFC"
        app:layout_constraintTop_toBottomOf="@+id/edtMobileNumberRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtPasswordRegister"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordRegister"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/input_email_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="18dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_login_background"
        android:fontFamily="@font/poppins_medium"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPasswordRegister" />
    <TextView
        android:id="@+id/txtHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:textColor="#616161"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        android:layout_marginTop="14dp"
        android:layout_marginStart="60dp"
        android:fontFamily="@font/poppins_medium"/>
    <TextView
        android:id="@+id/txtLoginNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/btnRegister"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/txtHaveAccount"
        android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>