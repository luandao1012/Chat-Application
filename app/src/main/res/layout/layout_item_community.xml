<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#171717"
    android:weightSum="10"
    android:id="@+id/layoutItemCommunity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCommunity"
        style="@style/circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="19dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testttt"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:fontFamily="@font/open_sans"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center"
                android:src="@drawable/img_icon_community"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/txtTimeCommunity"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginEnd="34dp"
                android:text="10/100"
                android:textColor="#ACB3BF"
                android:fontFamily="@font/open_sans"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtLastMessageCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test tin nhan"
            android:textColor="#ACB3BF"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans"/>
    </LinearLayout>
</LinearLayout>