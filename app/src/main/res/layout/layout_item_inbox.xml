<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#171717"
    android:weightSum="10"
    android:id="@+id/layoutItemInbox">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgInbox"
        app:shapeAppearanceOverlay="@style/circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="19dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_img"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:strokeColor="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtInbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Testttt"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"/>

            <TextView
                android:id="@+id/txtTimeInbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="34dp"
                android:text="testtt"
                android:textColor="#ACB3BF"
                android:fontFamily="@font/open_sans"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtLastMessageInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test tin nhan"
            android:textColor="#ACB3BF"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans" />

        <TextView
            android:id="@+id/txtLastMessageSeenInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test tin nhan"
            android:textColor="#FEFCFC"
            android:textSize="13sp"
            android:fontFamily="@font/open_sans"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>